import sqlite3

def criar_conexao():
    return sqlite3.connect("ligaclinica.db")

def criar_tabelas():
    conn = criar_conexao()
    cursor = conn.cursor()

    cursor.execute("""
        CREATE TABLE IF NOT EXISTS casos_clinicos (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            idade INTEGER,
            sexo TEXT,
            diagnostico TEXT,
            caracteristica TEXT,
            descricao TEXT
        )
    """)

    conn.commit()
    conn.close()

if __name__ == "__main__":
    criar_tabelas()
    print("Base de dados criada com sucesso.")
